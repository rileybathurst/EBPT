---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/header";
import Footer from "../../components/footer";
import FlyerImage from "../../images/flyer";
import { siteMetadata } from "../../data/siteMetadata";

const currentPath = Astro.url.pathname;
const title = "Pelvic Health Dysfunction";
const pageTitle = `${title} | ${siteMetadata.title}`;
const pageDescription = "Happenings from around the clinic.";

const breadcrumbJson = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "news",
      item: `${siteMetadata.siteUrl}news/`
    },
    {
      "@type": "ListItem",
      position: 2,
      name: title,
      item: `${siteMetadata.siteUrl}news/pelvic-health-dysfunction-lecture/`
    }
  ]
};

const eventJson = {
  "@context": "https://schema.org",
  "@type": "Event",
  name: title,
  startDate: "2024-03-25T16:30",
  endDate: "2024-03-25T17:30",
  eventAttendanceMode: "https://schema.org/OfflineEventAttendanceMode",
  eventStatus: "https://schema.org/EventScheduled",
  location: {
    "@type": "Place",
    name: siteMetadata.name,
    address: {
      "@type": "PostalAddress",
      streetAddress: siteMetadata.location.address.streetAddress,
      addressLocality: siteMetadata.location.address.addressLocality,
      addressRegion: siteMetadata.location.address.addressRegion,
      postalCode: siteMetadata.location.address.postalCode
    }
  },
  image: "https://ebpt.s3.us-west-1.amazonaws.com/images/news/ebpt-flyer.jpg",
  description: "Brief lecture and exercise instruction.",
  performer: {
    "@type": "Person",
    name: "Raven Osika SPT"
  },
  organizer: {
    "@type": "Organization",
    name: siteMetadata.name,
    url: siteMetadata.url
  }
};
---
<BaseLayout title={pageTitle} description={pageDescription} url={currentPath} image="https://ebpt.s3.us-west-1.amazonaws.com/images/news/ebpt-flyer.jpg">
  <Fragment slot="seo">
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbJson)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(eventJson)}></script>
  </Fragment>

  <Header currentPath={currentPath} client:load />
  <div class="single-fold">
    <ol class="breadcrumbs">
      <li itemprop="itemListElement">
        <a href="/news/">News</a>&nbsp;&nbsp;/&nbsp;&nbsp;
      </li>
      <li>{title}</li>
    </ol>
  </div>

  <hr />

  <main class="two-fold">
    <div class="two-fold-content">
      <a
        href="https://www.tahoedailytribune.com/news/emerald-bay-physical-therapy-a-center-for-health-wellness-in-south-lake-tahoe/"
        target="_blank"
        rel="noopener noreferrer"
        title={title}
      >
        <FlyerImage />
      </a>
    </div>
    <div class="two-fold-content">
      <h1>{title}</h1>
      <h2>Brief lecture and exercise instruction</h2>
      <p class="h5">
        <time dateTime="2024-03-25T16:30">March 25, 2024 - 4:30pm</time> -
        <time dateTime="2024-03-25T17:30"> 5:30pm</time>
      </p>

      <p>Hosted by Raven Osika SPT from USC</p>
    </div>
  </main>
  <hr />
  <Footer />
</BaseLayout>
